{
  "name": "kurukh-dictionary",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "emulators": "firebase emulators:start --only auth,functions,firestore,storage,hosting",
    "dev:firebase": "concurrently \"npm run emulators\" \"npm run dev\"",
    "build": "vite build",
    "build:clean": "rm -rf dist && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "npm run build:clean && firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "init-db": "node scripts/initializeDatabase.js"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.7",
    "daisyui": "^5.0.37",
    "firebase": "^11.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "firebase-tools": "^14.4.0",
    "globals": "^16.0.0",
    "tailwindcss": "^4.1.7",
    "vite": "^6.3.5"
  }
}