{
  "name": "kurukh-dictionary",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "emulators": "firebase emulators:start --only auth,functions,firestore,storage,hosting",
    "dev:firebase": "concurrently \"npm run emulators\" \"npm run dev\" \"sleep 60 & npm run init-db\"",
    "build": "vite build",
    "build:clean": "rm -rf dist && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "npm run build:clean && firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "init-db": "node scripts/initializeDatabase.js",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.7",
    "@tiptap/extension-placeholder": "^2.12.0",
    "@tiptap/extension-text-align": "^2.12.0",
    "@tiptap/extension-text-style": "^2.12.0",
    "@tiptap/extension-typography": "^2.12.0",
    "@tiptap/extension-underline": "^2.12.0",
    "@tiptap/pm": "^2.12.0",
    "@tiptap/react": "^2.12.0",
    "@tiptap/starter-kit": "^2.12.0",
    "@xstate/react": "^5.0.4",
    "daisyui": "^5.0.37",
    "firebase": "^11.8.1",
    "firebase-admin": "^13.4.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.0",
    "xstate": "^5.19.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.25.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "firebase-tools": "^14.4.0",
    "globals": "^16.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4.1.7",
    "text-encoding": "^0.7.0",
    "vite": "^6.3.5"
  }
}
